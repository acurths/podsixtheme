<script>
    require([
            'jquery', 'Magento_Ui/js/modal/modal'
        ], function ($, modal) {
            var options = {
                type: 'popup',
                modalClass: 'video-modal',
                title: '',
                trigger: '[data-trigger=video-modal-trigger]',
                buttons: [{
                    text: $.mage.__('Close'),
                    class: 'close-modal',
                    click: function () {
                        this.closeModal();
                    }
                }]
            };

            var popup = modal(options, $('#video-modal'));
            $(".video-modal-play").on('click', function () {
                $("#video-modal").modal("openModal");
            });

            $('.video-modal').on('modalclosed', function () {

                var video = $("#video-youtube").attr("src");
                $("#video-youtube").attr("src", "");
                $("#video-youtube").attr("src", video);

            });
        }
    );
</script>
